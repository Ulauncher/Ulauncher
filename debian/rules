#!/usr/bin/make -f
export DEB_BUILD_OPTIONS=nocheck
# Enable this export to get more detailed information about what debhelper does during the build process.
#export DH_VERBOSE = 1

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_build:
	python3 -m pip wheel --no-build-isolation --no-deps .

override_dh_auto_install:
	python3 -m pip install --ignore-installed --root=$(CURDIR)/debian/ulauncher --prefix=/usr --no-deps *.whl

override_dh_auto_clean:
	rm -rf build/ dist/ *.egg-info/
	find . -name "*.pyc" -delete
	find . -name "__pycache__" -type d -exec rm -rf {} + || true
